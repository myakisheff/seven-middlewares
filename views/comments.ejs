<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/kimeiga/bahunya/dist/bahunya.min.css">
    <title>Document</title>
</head>
<body>
    <h1>Комментарии</h1>
    <ul>
        <% if (comments.length) { %>
            <% comments.forEach(({id, name, content, createdAt}) => { %>
                <li>
                    <b>Name: </b> <%= name %>
                </li>
                <li>
                    <b>Comment: </b> <%= content %>
                </li>
                <li>
                    <b>Date: </b> <%= createdAt.toLocaleDateString() %>
                </li>
                <a href="comments/<%= id %>">Перейти</a>

                <br>
                <br>
            <% }) %>
        <% } %>
    </ul>
</body>
</html>